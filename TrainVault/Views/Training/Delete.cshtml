@model TrainVault.DataAccess.Training

@{
    ViewData["Title"] = "Delete Training";
}

<h1>Delete Training</h1>

<h3>Are you sure you want to delete this training session?</h3>
<div>
    <h4>Training Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfTraining
        </dd>
        <dt class="col-sm-2">
            Purpose
        </dt>
        <dd class="col-sm-10">
            @Model.PurposeOfTraining
        </dd>
        <dt class="col-sm-2">
            Place
        </dt>
        <dd class="col-sm-10">
            @Model.PlaceOfTraining
        </dd>
        <dt class="col-sm-2">
            Organization
        </dt>
        <dd class="col-sm-10">
            @Model.Organization.OrganizationName
        </dd>
        <dt class="col-sm-2">
            Employees
        </dt>
        <dd class="col-sm-10">
            @foreach (var employee in Model.Employees)
            {
                <span>@employee.FirstName @employee.LastName</span>

                <br />
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TrainingId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
